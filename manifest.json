{
    "name": "Sonarr",
    "id": "sonarr",
    "packaging_format": 1,
    "description": {
        "en": "Smart PVR for newsgroup and bittorrent users.",
        "fr": "Utilitaire intéligent pour les utilisateurs de newsgroup ou de bittorent"
    },
    "version": "2.0.0.5338~ynh9",
    "url": "https://sonarr.tv",
    "license": "GPL-3.0-or-later",
    "maintainer": {
        "name": "Julien Lavergne",
        "email": "gilir@ubuntu.com",
        "url": "https://me.lavergne.online"
    },
    "requirements": {
        "yunohost": ">= 3.5"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Sonarr",
                    "fr": "Choisissez un nom de domaine pour Sonarr"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Sonarr",
                    "fr": "Choisissez un chemin pour Sonarr"
                },
                "example": "/sonarr",
                "default": "/sonarr"
            },
            {
                "name": "datadir",
                "type": "path",
                "ask": {
                    "en": "Choose a custome path for the data of Sonarr",
                    "fr": "Choisissez un chemin spécifique pour les données de Sonarr"
                },
                "example": "/media/data/sonarr",
                "default": "/"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": false
            }
        ]
    }
}
